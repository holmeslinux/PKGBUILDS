# Maintainer: steftrikia

pkgname=ultraflatorange-icon-theme
pkgver=1.3.2
pkgrel=1
pkgdesc="A flat design icon theme by steftrikia"
arch=('any')
url="http://ubuntualive.blogspot.com.br/2015/02/ultra-flat-icons-version-131-blue.html"
license=('GPL3')
source=("https://www.dropbox.com/s/8p2t7n78a4g0jjj/Ultra%20Flat%20Orange%201.3.2.tar.gz")
md5sums=('d09cd11bded7c79e255ad9f7e511ad2d')

package() {
  # create theme dirs
  install -d -m 755 "$pkgdir"/usr/share/icons/Ultra Flat Orange

 # install theme
  cd $srcdir/$_pkgname/ultraflatorange-icon-theme
  cp -r . "$pkgdir"/usr/share/icons/Ultra Flat Orange
}

